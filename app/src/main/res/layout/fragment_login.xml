<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.intro.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:cardBackgroundColor="#F3F4F8"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/login_infoTXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1F000000"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="ID를 입력해주세요."
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#BF000000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/login_IDTXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="8dp"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/notosanskr_bold"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:includeFontPadding="false"
                    android:inputType="textPersonName"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="#454545"
                    android:textSize="24sp"
                    android:visibility="visible"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/login_passTXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="8dp"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/notosanskr_bold"
                    android:gravity="center"
                    android:imeOptions="actionNone"
                    android:includeFontPadding="false"
                    android:inputType="number|numberPassword"
                    android:maxLength="6"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:visibility="gone"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <CheckBox
                    android:id="@+id/login_autoCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jamsil_3_regular"
                    android:gravity="center"
                    android:text="자동로그인"
                    android:textAllCaps="true"
                    android:textColor="#BF000000"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/login_BTN"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:includeFontPadding="false"
                    android:text="로그인"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/login_stepTXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/notosanskr_light"
                    android:includeFontPadding="false"

                    android:text="아이디가 없으신가요?"
                    android:textAlignment="center"
                    android:textColor="#1976D2"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>